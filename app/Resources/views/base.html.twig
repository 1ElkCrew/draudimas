<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('../vendor/twbs/bootstrap/dist/css/bootstrap.min.css') }}">
</head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path("sutartys") }}">Sutartys</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('new') }}">Naujas įrašas</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if app.user is defined and app.user is not null %}
                        <li><a href="{{ path('fos_user_security_logout') }}">{{ app.user }} (Atsijungti)</a></li>
                    {% else %}
                        <li><a href="{{ path("fos_user_registration_register") }}"><span class="glyphicon glyphicon-user"></span> Registruotis</a></li>
                        <li><a href="{{ path("fos_user_security_login") }}"><span class="glyphicon glyphicon-log-in"></span> Prisijungti</a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        <div class="col-xs-12">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}

        <script   src="https://code.jquery.com/jquery-1.12.4.min.js"
                  integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
                  crossorigin="anonymous">
        </script>
        <script src="{{ asset('../vendor/twbs/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    </body>
</html>